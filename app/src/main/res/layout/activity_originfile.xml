<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".originfile">

    <Button
        android:id="@+id/mahesh"
        android:layout_width="318dp"
        android:layout_height="45dp"
        android:layout_marginBottom="286dp"
        android:background="@drawable/aroow_enable4"
        android:text="Maheshwarasutra"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#05A800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/button17"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="452dp"
        android:layout_marginBottom="223dp"
        android:background="@drawable/aroow_enable5"
        android:text="Scholars"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#15B302"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button18"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginTop="516dp"
        android:background="@drawable/aroow_enable6"
        android:text="Sanskrit in Indian Mythology"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#01A60A"
        app:layout_constraintBottom_toTopOf="@id/imageView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="405dp"
        android:layout_height="110dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/feather_bold_by_typicalbro44_dee263c"
        android:gravity="center"
        android:text="ORIGINS OF SANSKRIT"
        android:textAlignment="center"
        android:textColor="#1D6C00"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/feather_bold_by_typicalbro44_dee263c"
        android:text="The Sanskrit language was termed as Deva-Vani ('Deva' Gods - 'Vani' language) as it was believed to have been generated by the god Brahma who passed it on to the Rishis (sages) living in celestial abodes, who then communicated the same to their earthly disciples. "
        android:textColor="#131213"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/mahesh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="162dp"
        android:layout_height="116dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button18"
        app:srcCompat="@drawable/dhatu" />
</androidx.constraintlayout.widget.ConstraintLayout>